<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/round_corner"
        android:paddingBottom="@dimen/_25sdp">

    <ImageView

            android:layout_alignParentRight="true"
            android:padding="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:id="@+id/setting"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="@string/afternoon"
            android:src="@drawable/ic_setting"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/medium"
            app:tint="@color/icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_marginStart="@dimen/_5sdp"
                android:id="@+id/snooze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/snooze"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="@font/medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
                android:id="@+id/later_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/time"
                    android:id="@+id/later"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/Latertoday"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/app_name"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/tomorrow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/ttime"
                    android:id="@+id/tomorrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/tomorrow"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/ttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/morning"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>
        <LinearLayout
                android:id="@+id/check4"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView

                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tomorrow_eve"
                    android:gravity="start|center"
                    android:checkMark="@drawable/check_mark"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/night"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/check5"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView

                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weekend"
                    android:gravity="start|center"
                    android:checkMark="@drawable/check_mark"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Threehr"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/check6"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView

                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next Week"
                    android:gravity="start|center"
                    android:checkMark="@drawable/check_mark"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/morning"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/check7"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView

                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/month"
                    android:gravity="start|center"
                    android:checkMark="@drawable/check_mark"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Threehr"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_10sdp"/>
        </LinearLayout>



        <RelativeLayout
                android:id="@+id/next_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/timew"
                    android:id="@+id/week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/NextWeek"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/timew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/afternoon"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:padding="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/timep"
                    android:id="@+id/pick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/pickDate"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/timep"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="16dp"
                    android:text="@string/afternoon"
                    android:src="@drawable/arrow"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/icon" />
        </RelativeLayout>

        <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/darkgrey" />

        <androidx.appcompat.widget.SwitchCompat
                android:layout_marginTop="@dimen/_8sdp"
                android:theme="@style/ThemeOverlay.MySwitch"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_notification" />


    </LinearLayout>

</RelativeLayout>
