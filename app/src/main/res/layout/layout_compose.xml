<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorWhite"
        android:orientation="vertical"
        android:id="@+id/container">


    <RelativeLayout
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_black"
            android:lineSpacingExtra="@dimen/_1sdp"
            android:padding="@dimen/_5sdp"
            android:text="Try Spark Premium Free\n for 7 days"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_back"
                app:tint="@color/darkgrey" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toStartOf="@+id/premium"
                android:layout_toEndOf="@+id/back"
                android:fontFamily="@font/medium"
                android:text="Important Advise"
                android:textSize="@dimen/_16sdp" />

        <ImageView
                android:id="@+id/premium"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_toStartOf="@+id/contact"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_prem"
                app:tint="@color/darkgrey" />

        <ImageView
                android:id="@+id/contact"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_toStartOf="@+id/pin"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_contact"
                app:tint="@color/darkgrey" />

        <ImageView

                android:id="@+id/pin"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_pin"
                app:tint="@color/darkgrey" />

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"

            android:orientation="vertical"
            android:visibility="gone" />
<!--    <ScrollView-->
<!--            android:fitsSystemWindows="true"-->
<!--            android:fillViewport="true"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:scrollbars="vertical"-->
<!--           >-->
    <RelativeLayout
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
                android:visibility="visible"
                android:id="@+id/content_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="60dp">
            <TextView
                    android:id="@+id/compose"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_above="@+id/bottombar"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:visibility="gone"
                    android:autoLink="web"/>
            <WebView
                    android:layout_below="@+id/compose"
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_above="@+id/bottombar"
                    android:layout_alignParentLeft="true"

                    android:visibility="gone" />
            <WebView



                    android:id="@+id/webview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom"
                    android:layout_alignParentLeft="true"


                    android:visibility="visible" />

        </LinearLayout>





        <ImageView

                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/black_med"
                android:padding="@dimen/_7sdp"
                android:visibility="gone"
                android:src="@drawable/ic_clock" />


        <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottombar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="start"
                android:background="#DDE3FA"
                android:backgroundTint="#DDE3FA"
                android:gravity="start"
                android:theme="@style/Bottombar"
                android:visibility="gone"
                app:hideOnScroll="true"
                app:menu="@menu/bottom_bar" />

        <RelativeLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_alignParentBottom="true"
                android:background="#DDE3FA"
                android:gravity="center">

            <ImageView
                    android:layout_centerVertical="true"
                   android:layout_marginEnd="@dimen/_10sdp"
                    android:id="@+id/apply"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_sqare"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:src="@drawable/ic_check" />

            <LinearLayout

                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/apply"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/more"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_7sdp"
                        android:rotation="90"
                        android:src="@drawable/ic_more"
                        android:layout_margin="@dimen/_5sdp"/>

                <ImageView
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/reply"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_reply" />

                <ImageView
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/home"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_circle" />

                <ImageView
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/clock"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_clock" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
<!--    </ScrollView>-->

</LinearLayout>