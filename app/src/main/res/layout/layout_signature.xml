<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    <androidx.appcompat.widget.SwitchCompat
            android:theme="@style/ThemeOverlay.MySwitchCompat"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/display"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/regular"
            android:textColor="@color/black_med"
            android:padding="@dimen/_5sdp"/>
    <Switch
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use email signatures"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/regular"
            android:textColor="@color/black_med"
            android:enabled="true"
            android:checked="true"
            android:theme="@style/ThemeOverlay.MySwitch"
            android:padding="@dimen/_5sdp"/>
    <RelativeLayout
            android:id="@+id/add_layout"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/add_acc"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_add"
                app:tint="@color/colorPurple" />
        <TextView
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/add_acc"
                android:id="@+id/add_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add signature"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:fontFamily="@font/regular"
                android:textStyle="bold"
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/_12sdp"/>




    </RelativeLayout>
</LinearLayout>