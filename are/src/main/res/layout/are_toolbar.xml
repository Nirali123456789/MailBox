<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:colorPickerView="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.chinalwb.are.colorpicker.ColorPickerView
            android:id="@+id/rteColorPalette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/background_light"
            android:padding="10dp"
            android:visibility="gone"
            colorPickerView:colorViewCheckedType="checkMark"
            colorPickerView:colorViewHeight="@dimen/_25sdp"
            colorPickerView:colorViewMarginLeft="2dp"
            colorPickerView:colorViewMarginRight="2dp"
            colorPickerView:colorViewWidth="@dimen/_25sdp"
            colorPickerView:colors="@array/colorPickerColors" />

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/rteEmoji"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/emoji"
                    android:visibility="gone"

                    />

            <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/rteFontsize"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_text"
                    android:visibility="visible"

                    />

            <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/rteFontface"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/fontface"
                    android:visibility="gone"

                    />

            <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/rteBold"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_bold" />

            <ImageView
                    android:id="@+id/rteItalic"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_italic" />

            <ImageView
                    android:id="@+id/rteUnderline"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_underline" />

            <ImageView
                    android:id="@+id/rteStrikethrough"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_uniq" />

            <ImageView
                    android:id="@+id/rteHr"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/hr" />


            <ImageView
                    android:id="@+id/rteSubscript"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/subscript"
                    android:visibility="gone" />

            <ImageView
                    android:id="@+id/rteSuperscript"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/superscript"
                    android:visibility="gone" />

            <ImageView
                    android:id="@+id/rteQuote"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_doublesvg" />


            <ImageView
                    android:id="@+id/rteFontColor"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_brush" />

            <ImageView
                    android:id="@+id/rteBackground"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/background"

                    />

            <ImageView
                    android:id="@+id/rteLink"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_link"

                    />

            <ImageView
                    android:id="@+id/rteListNumber"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_digit" />

            <ImageView
                    android:id="@+id/rteListBullet"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_bullet"

                    />

            <ImageView
                    android:id="@+id/rteIndentRight"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/indentright"
                    android:visibility="gone"

                    />

            <ImageView
                    android:id="@+id/rteIndentLeft"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_left"

                    />

            <ImageView
                    android:id="@+id/rteAlignLeft"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/alignleft"
                    android:visibility="gone"/>

            <ImageView
                    android:visibility="gone"
                    android:id="@+id/rteAlignCenter"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/aligncenter" />

            <ImageView
                    android:id="@+id/rteAlignRight"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/ic_right_" />

            <ImageView
                    android:visibility="gone"
                    android:id="@+id/rteInsertImage"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/image" />

            <ImageView
                    android:visibility="gone"
                    android:id="@+id/rteInsertVideo"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/video"

                    />

            <ImageView
                    android:id="@+id/rteAt"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="2dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/at"
                    android:visibility="gone" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
            android:id="@+id/rteEmojiPanel"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:visibility="gone">

    </LinearLayout>
</merge>